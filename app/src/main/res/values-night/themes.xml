<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.OceanTunes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple4</item>  <!-- Un viola più chiaro per il primario in dark mode -->
        <item name="colorPrimaryVariant">@color/purple3</item> <!-- Variante più scura del primario in dark mode -->
        <item name="colorOnPrimary">@color/white</item> <!-- Testo/icone su colore primario -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple2</item> <!-- Un viola diverso per il secondario -->
        <item name="colorSecondaryVariant">@color/purple1</item> <!-- Variante più scura del secondario -->
        <item name="colorOnSecondary">@color/white</item> <!-- Testo/icone su colore secondario -->

        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark</item> <!-- Colore di sfondo principale scuro -->
        <item name="colorSurface">@color/dark</item> <!-- Colore per le superfici come Card, Sheet -->
        <item name="colorOnBackground">@color/white_smoke</item> <!-- Testo/icone su sfondo scuro -->
        <item name="colorOnSurface">@color/white_smoke</item> <!-- Testo/icone su superfici scure -->
        <item name="colorError">#CF6679</item> <!-- Colore standard per errori in Material Dark -->
        <item name="colorOnError">@color/black</item> <!-- Testo/icone su colore errore -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark</item> <!-- Status bar scura, coerente con lo sfondo -->

        <!-- Altri attributi specifici per il tema scuro se necessario -->
        <!-- Esempio: colore del testo -->
        <item name="android:textColorPrimary">@color/white_smoke</item>
        <item name="android:textColorSecondary">@color/light_gray</item>

        <!-- Outline color (se usi Material 3 components) -->
        <item name="colorOutline">@color/gray</item> <!-- Un grigio per i bordi in dark mode -->

        <!-- OnSurfaceVariant (se usi Material 3 components) -->
        <item name="colorOnSurfaceVariant">@color/light_gray</item> <!-- Per testo/icone meno enfatizzati su superfici scure -->
    </style>
</resources>