<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Material Button-->
    <declare-styleable name="MaterialButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonColor" format="color" />
        <attr name="setIcon" format="boolean" />
    </declare-styleable>

    <!--Material Text Field-->
    <declare-styleable name="MaterialTextInput">
        <attr name="hintText" format="string" />
        <attr name="textColor" format="color|reference" />
        <attr name="hintTextColor" format="color|reference" />
        <attr name="boxStrokeColor" format="color|reference" />
        <attr name="boxBackgroundColor" format="color|reference" />
    </declare-styleable>
</resources>