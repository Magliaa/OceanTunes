<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Material Button-->
    <declare-styleable name="MaterialButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonColor" format="color" />
        <attr name="setIcon" format="boolean" />
    </declare-styleable>

    <!--Material Text Field-->
    <declare-styleable name="MaterialTextInput">
        <attr name="hintText" format="string" />
        <attr name="textColor" format="color|reference" />
        <attr name="hintTextColor" format="color|reference" />
        <attr name="boxStrokeColor" format="color|reference" />
        <attr name="boxBackgroundColor" format="color|reference" />
    </declare-styleable>
    
    <!--Material Carousel-->
    <declare-styleable name="MaterialCarousel">
        <attr name="itemSpacing" format="dimension" tools:ignore="PrivateResource" />
        <attr name="autoScroll" format="boolean" />
        <attr name="scrollInterval" format="integer" />
        <attr name="showIndicators" format="boolean" />
        <attr name="indicatorColor" format="color" />
        <attr name="indicatorSelectedColor" format="color" />
    </declare-styleable>

    <!-- Material FAB -->
    <declare-styleable name="MaterialFAB">
        <attr name="backgroundColor" format="color" />
        <attr name="icon" format="reference" />
        <attr name="iconTint" format="color" />
    </declare-styleable>

    <!-- Divider -->
    <declare-styleable name="Divider">
        <attr name="color" format="color" />
    </declare-styleable>

    <!-- Song Summary -->
    <declare-styleable name="SongSummary">
        <attr name="img" format="reference" />
        <attr name="title" format="string" />
        <attr name="artist" format="string" />
    </declare-styleable>
</resources>